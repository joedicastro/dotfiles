let g:unite_source_menu_menus = {}

" tecla prefijo para menus (se usa para todos los menus de Unite) {{{
nnoremap [menu] <Nop>
nmap <LocalLeader> [menu]
" }}}

" menu menus
nnoremap <silent>[menu]u :Unite menu -start-insert<CR>

" menu ficheros y directorios {{{
let g:unite_source_menu_menus.ficheros = {
    \ 'description' : 'Gestionar ficheros y directorios',
    \}
let g:unite_source_menu_menus.ficheros.command_candidates = [
    \['▷ abrir fichero                                              ⌘ ,o',
        \'Unite -start-insert file'],
    \['▷ abrir fichero reciente                                     ⌘ ,m',
        \'Unite file_mru'],
    \['▷ abrir fichero con busqueda recursiva',
        \'Unite -start-insert file_rec/async'],
    \['▷ crear nuevo fichero',
        \'Unite file/new'],
    \['▷ buscar directorio',
        \'Unite directory'],
    \['▷ buscar directorio reciente',
        \'Unite directory_mru'],
    \['▷ buscar directorio con busqueda recursiva',
        \'Unite directory_rec/async'],
    \['▷ crear nuevo directorio',
        \'Unite directory/new'],
    \['▷ cambiar directorio de trabajo',
        \'Unite -default-action=lcd directory'],
    \['▷ conocer directorio de trabajo',
        \'Unite output:pwd'],
    \['▷ abrir ranger                                               ⌘ ,r',
        \'call RangerChooser()'],
    \]
nnoremap <silent>[menu]o :Unite -start-insert menu:ficheros<CR>
" }}}

" menu busqueda de ficheros {{{
function! OnlyGitFiles()
    cgete system("git ls-files ".input("dir? " )."\\| xargs ack
                \".input("pattern? "))
endfunction
let g:unite_source_menu_menus.grep = {
    \ 'description' : 'Buscar ficheros',
    \}
let g:unite_source_menu_menus.grep.command_candidates = [
    \['▷ grep (ag → ack → grep)                                     ⌘ ,a',
        \'Unite -no-quit grep'],
    \['▷ grep (ack, solo ficheros en el repositorio git)',
        \'exe "call OnlyGitFiles() | Unite quickfix"'],
    \['▷ find',
        \'Unite find'],
    \['▷ locate',
        \'Unite locate'],
    \['▷ vimgrep (muy lento)',
        \'Unite vimgrep'],
    \]
nnoremap <silent>[menu]a :Unite menu:grep<CR>
" }}}

